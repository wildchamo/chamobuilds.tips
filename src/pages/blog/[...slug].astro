---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";

export async function getStaticPaths() {
  const posts = await getCollection("tech");

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

if (!post) return Astro.redirect("/404");

const { Content } = await post.render();
// console.log(post);
---

<Layout title={post.data.title}>
  <Header title={post.data.title} />

  <article class="container mx-auto py-8 px-4 max-w-3xl">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">
        {post.data.title}
      </h1>
      <div class="flex items-center justify-between">
        {
          new Date(post.data.pubDate).toLocaleDateString("es-ES", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </div>
      <div class="flex flex-wrap gap-2">
        {
          post.data.tags.map((tag: string) => (
            <span class="bg-purple-100 text-purple-600 text-xs px-2 py-1 rounded-full">
              {tag}
            </span>
          ))
        }
      </div>
    </header>
    <p class="text-gray-700 mt-2">{post.data.description}</p>
  </article>

  <div class="prose prose-lg max-w-none">
    <Content />
  </div>
</Layout>

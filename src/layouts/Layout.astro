---
import "../styles/global.css";

import Footer from "../components/Footer.vue";

import Social from "../components/SocialMedia.svelte";

import ComplexHeader from "../components/ComplexHeader.tsx";
import BaseHead from "../components/BaseHead.astro";
interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
  <BaseHead
    title={title}
    description={"sitio de ejemplo, aprendizaje astro!"}
  />

  <body class="">
    <ComplexHeader client:load />
    <slot />
    <Footer />
    <Social />
  </body>
</html>

<style>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
